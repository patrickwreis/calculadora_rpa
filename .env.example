# Environment variables
DATABASE_URL=sqlite:///data/calculator.db

# API Settings
DEBUG=false

# Logging
LOG_LEVEL=INFO

# ===== AUTHENTICATION (REQUIRED) =====
# SEGURANÇA CRÍTICA: Configure credenciais únicas para seu ambiente
# NUNCA use valores padrão em produção!
# Gere senhas fortes: use `python -c "import secrets; print(secrets.token_urlsafe(32))"`
AUTH_REQUIRED=true
AUTH_USERNAME=YOUR_ADMIN_USERNAME_HERE
AUTH_PASSWORD=YOUR_ADMIN_PASSWORD_HERE
AUTH_EMAIL=admin@seudominio.com

# AUTH_COOKIE configuration
AUTH_COOKIE_NAME=rpa_auth
AUTH_COOKIE_KEY=rpa_auth_signature
AUTH_COOKIE_DAYS=30

# ===== EMAIL CONFIGURATION (para recuperação de senha) =====
# Configurar para usar Gmail:
# 1. Ativar autenticação de dois fatores na sua conta Google
# 2. Gerar uma "App Password": https://myaccount.google.com/apppasswords
# 3. Usar o email e a app password abaixo

SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_SENDER=seu_email@gmail.com
EMAIL_PASSWORD=sua_app_password

# Exemplo com outro provedor:
# SMTP_SERVER=smtp.office365.com
# SMTP_PORT=587
# EMAIL_SENDER=seu_email@outlook.com
# EMAIL_PASSWORD=sua_senha